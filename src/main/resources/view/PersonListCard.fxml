<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <!-- Student Info Column -->
      <ColumnConstraints minWidth="180" prefWidth="200" hgrow="SOMETIMES" />
      <!-- Attendance Column -->
      <ColumnConstraints minWidth="100" prefWidth="120" halignment="CENTER" />
      <!-- Participation Column -->
      <ColumnConstraints minWidth="100" prefWidth="120" halignment="CENTER" />
      <!-- Grade Column -->
      <ColumnConstraints minWidth="80" prefWidth="100" halignment="CENTER" />
    </columnConstraints>

    <!-- Student Info -->
    <VBox GridPane.columnIndex="0" alignment="CENTER_LEFT" minHeight="60">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox spacing="5" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label"/>
        <Label fx:id="studentId" text="\$id" styleClass="cell_big_label" />
        <Label text="-" styleClass="cell_big_label" />
        <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
      </HBox>
      <Label fx:id="phone" styleClass="cell_small_label" />
      <Label fx:id="email" styleClass="cell_small_label" />
      <Label fx:id="course" styleClass="cell_small_label" />
    </VBox>

    <!-- Attendance -->
    <VBox GridPane.columnIndex="1" alignment="CENTER" minHeight="60">
      <Label fx:id="attendance" text="Unmarked" styleClass="cell_small_label" />
    </VBox>

    <!-- Participation -->
    <VBox GridPane.columnIndex="2" alignment="CENTER" minHeight="60">
      <Label fx:id="participation" text="UNMARKED" styleClass="cell_small_label" />
    </VBox>

    <!-- Grade -->
    <VBox GridPane.columnIndex="3" alignment="CENTER" minHeight="60">
      <Label fx:id="grade" text="10" styleClass="cell_big_label" />
    </VBox>
  </GridPane>
</HBox>
